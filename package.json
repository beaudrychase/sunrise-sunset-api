{
  "name": "sunrise-sunset-api",
  "version": "1.0.0",
  "description": "a simple api to get the relative position of the sun",
  "main": "dist/server.js",
  "directories": {
    "doc": "docs",
    "source": "src"
  },
  "scripts": {
    "test": "jest",
    "build": "tsc -p tsconfig.json",
    "run": "node dist/server.js",
    "clean": "tsc --clean -p tsconfig.json",
    "lint": "eslint --ext .js,.ts .",
    "format": "prettier --ignore-path .gitignore --write \"**/*.+(js|ts|json)\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/beaudrychase/sunrise-sunset-api.git"
  },
  "keywords": [],
  "author": "beaudrychase",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/beaudrychase/sunrise-sunset-api/issues"
  },
  "homepage": "https://beaudrychase.xyz/sunrise-sunset-api/",
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^18.15.5",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.56.0",
    "@typescript-eslint/parser": "^5.56.0",
    "eslint": "8.36.0",
    "eslint-config-prettier": "^8.8.0",
    "jest": "^29.5.0",
    "prettier": "^2.8.6",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.5"
  },
  "dependencies": {
    "express": "^4.18.2",
    "express-validator": "^6.15.0",
    "suncalc": "^1.9.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": [
        "ts-jest",
        {
          "tsconfig": "tsconfig.test.json"
        }
      ]
    },
    "testMatch": [
      "**/test/**/*.+(ts|tsx|js)",
      "!**/test/helpers/**/*.+(ts|tsx|js)"
    ]
  }
}
